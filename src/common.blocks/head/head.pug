mixin head(head)
    // Begin head
    head
        // Title
        +title(head.title)
        // Meta
        +meta(head.meta)
        // Vendor Styles
        block vendor-styles
            +styles(head.css.vendor)
        // Theme Styles
        block theme-styles
            +styles(head.css.theme)
        // Favicon
        +favicon(head.favicon)
    // End head

//- TITLE
mixin title(title)
    title= title

//- META
mixin meta(collection)
    each item in collection
        meta&attributes(item)

//- STYLES
mixin styles(items)
    each item in items
        +style(item)

//- STYLE
mixin style(item)
    link(rel="stylesheet" type="text/css")&attributes(item)

//- FAVICON
mixin favicon(item)
    link(rel="shortcut icon")&attributes(item)